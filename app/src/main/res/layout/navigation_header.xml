<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/navigation_header_background">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_user_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimary"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        ></de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/nav_user_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Teddy Tassew"
        android:textColor="@color/colorAccent"
        android:fontFamily="monospace"
        android:layout_below="@+id/nav_user_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/nav_user_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Teddy Tassew"
        android:textColor="@color/colorAccent"
        android:fontFamily="monospace"
        android:layout_below="@+id/nav_user_full_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        />


</RelativeLayout>